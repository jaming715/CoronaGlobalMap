extends layout.pug
block content
  h1#country #{name}
  div.map
  h3.pop Population: 
    span Loading...
  h3.percent % of Pop Infected: 
    span Loading...
  h2 Current Covid-19 Status:
  div.stats
    h2 Total Confirmed Cases: #{totCases}
  div.stats
    h2 Total Deaths: #{totDeaths}
  div.stats
    h2 Total Recovered: #{totRecovered}
  input(type="text" id="search" name="country-search" placeholder="Search for Province")
  table#provinces
    tr.odd-row
      th Province
      th Total Confirmed Cases
      th Total Deaths
      th Total Recoveries
  p Data retrieved from John Hopkins CCGIS Data Set: 
    a(href="https://github.com/CSSEGISandData/COVID-19" target="_blank") Data Source
